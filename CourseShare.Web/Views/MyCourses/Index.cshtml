@using Microsoft.Extensions.Options
@model CourseShare.Domain.DTO.MyCoursesDto

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <div class="row m-4">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Course Name</th>
                    <th scope="col">Course Rating</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Courses.Count == 0)
                {
                    <tr>
                        <td colspan="5">No active Courses</td>
                    </tr>
                }
                else
                {
                    @for (int i = 0; i < Model.Courses.Count; i++)
                    {
                        var item = Model.Courses[i];

                        <tr>
                            <th scope="row">@(i + 1)</th>
                            <td>@item.CurrentCourse.CourseName</td>
                            <td>$@item.CurrentCourse.CourseRating</td>
                            <td><a asp-controller="MyCourses" asp-action="DeleteFromMyCourses" asp-route-id="@item.CourseId" class="btn btn-danger">Delete From MyCourses</a></td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

</div>